{
  "extends": [
    "airbnb",
    "airbnb-typescript"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "react/prefer-stateless-function": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "arrow-body-style": "off",
    "react/prop-types": "off",
    "@typescript-eslint/naming-convention": "off"
  }
}